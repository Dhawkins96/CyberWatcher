<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodel="clr-namespace:CyberWatcher.ViewModel"
                    xmlns:view="clr-namespace:CyberWatcher.View">

    <!--Data Templates apply Views to ViewModel objects displayed in the UI-->

    <!--Startup Page-->

    <DataTemplate DataType="{x:Type viewmodel:StartupViewModel}">
        <view:StartupView/>
    </DataTemplate>

    <!--Home Page-->

    <DataTemplate DataType="{x:Type viewmodel:HomeViewModel}">
        <view:HomeView/>
    </DataTemplate>

    <!--Password Page-->

    <DataTemplate DataType="{x:Type viewmodel:PasswordViewModel}">
        <view:PasswordView/>
    </DataTemplate>

    <!--Settings Page-->

    <DataTemplate DataType="{x:Type viewmodel:SettingsViewModel}">
        <view:SettingsView/>
    </DataTemplate>

    <!--UserAccount Page-->

    <DataTemplate DataType="{x:Type viewmodel:UserAccountViewModel}">
        <view:UserAccountView/>
    </DataTemplate>

    <!--Help Page-->

    <DataTemplate DataType="{x:Type viewmodel:HelpViewModel}">
        <view:HelpView/>
    </DataTemplate>

</ResourceDictionary>